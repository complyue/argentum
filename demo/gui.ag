using sys { Array }
using array;
using sdl { Window }

interface Actor {
    paint(dst Window);
    tick(milliseconds int) bool; // returns true if alive
}

class Group {
    +Array(Actor);
    +Actor{
        paint(dst Window) {
            each((i){ i.paint(dst) })
        }
        tick(milliseconds int) bool {
            plow((i) { i.tick(milliseconds) });
            size() != 0
        }
    }
}
